# MomentumOS Backend API - Environment Configuration
# Copy this file to .env and fill in your actual values

# SERVER CONFIGURATION
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# DATABASE CONFIGURATION
DATABASE_URL=postgresql://momentumos:password@localhost:5432/momentumos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=momentumos
DB_USER=momentumos
DB_PASSWORD=secure_password_here

# AUTHENTICATION
JWT_SECRET=your-very-secure-random-string-minimum-32-characters-long
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-string
JWT_REFRESH_EXPIRE=30d

# CORS CONFIGURATION
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# API CONFIGURATION
API_BASE_URL=https://api.momentumos.app
API_VERSION=v1
API_TIMEOUT=30000

# EXTERNAL SERVICES

## Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@momentumos.app
FROM_NAME=MomentumOS

## Analytics (Amplitude)
AMPLITUDE_API_KEY=your_amplitude_api_key

## Payment Processing (Stripe)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

## AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=momentumos-uploads
AWS_REGION=us-east-1

## Apple Services (if implementing Apple-specific features)
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key

## Google Services
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SECURITY
ALLOWED_ORIGINS=https://api.momentumos.app,https://app.momentumos.app
ENCRYPTION_KEY=your_encryption_key_32_chars
SESSION_SECRET=your_session_secret_key

# MONITORING & LOGGING
SENTRY_DSN=your_sentry_dsn
NEWRELIC_LICENSE_KEY=your_newrelic_key
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# DEVELOPMENT SETTINGS (set to false in production)
DEBUG=false
ALLOW_CORS_WILDCARD=false
SKIP_RATE_LIMITING=false
MOCK_PAYMENTS=false

# FEATURE FLAGS
FEATURE_SOCIAL_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AI_COACH_ENABLED=true
FEATURE_PREMIUM_ENABLED=true

# CACHE CONFIGURATION
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# FILE UPLOAD
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf

# BACKUP CONFIGURATION
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
